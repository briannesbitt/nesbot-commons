<?xml version="1.0" encoding="UTF-8"?>
<project name="nesbot-commons" default="all">
  
  
  <property file="nesbot-commons.properties"/>
  <!-- Uncomment the following property if no tests compilation is needed -->
  <!-- 
  <property name="skip.tests" value="true"/>
   -->
  
  <!-- Compiler options -->
  
  <property name="compiler.debug" value="on"/>
  <property name="compiler.generate.no.warnings" value="off"/>
  <property name="compiler.args" value=""/>
  <property name="compiler.max.memory" value="128m"/>
  <patternset id="ignored.files">
    <exclude name="**/CVS/**"/>
    <exclude name="**/SCCS/**"/>
    <exclude name="**/RCS/**"/>
    <exclude name="**/rcs/**"/>
    <exclude name="**/.DS_Store/**"/>
    <exclude name="**/.svn/**"/>
    <exclude name="**/.pyc/**"/>
    <exclude name="**/.pyo/**"/>
    <exclude name="**/*.pyc/**"/>
    <exclude name="**/*.pyo/**"/>
    <exclude name="**/.git/**"/>
    <exclude name="**/*.hprof/**"/>
    <exclude name="**/_svn/**"/>
    <exclude name="**/.hg/**"/>
    <exclude name="**/*.lib/**"/>
    <exclude name="**/*~/**"/>
    <exclude name="**/__pycache__/**"/>
    <exclude name="**/.bundle/**"/>
  </patternset>
  <patternset id="library.patterns">
    <include name="*.zip"/>
    <include name="*.war"/>
    <include name="*.egg"/>
    <include name="*.ear"/>
    <include name="*.swc"/>
    <include name="*.jar"/>
  </patternset>
  <patternset id="compiler.resources">
    <include name="**/?*.properties"/>
    <include name="**/?*.xml"/>
    <include name="**/?*.gif"/>
    <include name="**/?*.png"/>
    <include name="**/?*.jpeg"/>
    <include name="**/?*.jpg"/>
    <include name="**/?*.html"/>
    <include name="**/?*.dtd"/>
    <include name="**/?*.tld"/>
    <include name="**/?*.ftl"/>
  </patternset>
  
  
  <!-- Project Libraries -->
  
  <path id="library.junit.classpath">
    <pathelement location="${basedir}/out/test/nesbot-commons"/>
    <pathelement location="${basedir}/src/test/resources/junit-4.9.jar"/>
  </path>
  
  
  <!-- Global Libraries -->
  
  <!-- Modules -->
  
  
  <!-- Module nesbot-commons -->
  
  <dirname property="module.nesbot-commons.basedir" file="${ant.file}"/>
  
  
  
  <property name="compiler.args.nesbot-commons" value="${compiler.args}"/>
  
  <property name="nesbot-commons.output.dir" value="${module.nesbot-commons.basedir}/out/production/nesbot-commons"/>
  <property name="nesbot-commons.testoutput.dir" value="${module.nesbot-commons.basedir}/out/test/nesbot-commons"/>
  
  <path id="nesbot-commons.module.bootclasspath">
    <!-- Paths to be included in compilation bootclasspath -->
  </path>
  
  <path id="nesbot-commons.module.production.classpath">
    <path refid="library.junit.classpath"/>
  </path>
  
  <path id="nesbot-commons.runtime.production.module.classpath">
    <pathelement location="${nesbot-commons.output.dir}"/>
    <path refid="library.junit.classpath"/>
  </path>
  
  <path id="nesbot-commons.module.classpath">
    <pathelement location="${nesbot-commons.output.dir}"/>
    <path refid="library.junit.classpath"/>
  </path>
  
  <path id="nesbot-commons.runtime.module.classpath">
    <pathelement location="${nesbot-commons.testoutput.dir}"/>
    <pathelement location="${nesbot-commons.output.dir}"/>
    <path refid="library.junit.classpath"/>
  </path>
  
  
  <patternset id="excluded.from.module.nesbot-commons">
    <patternset refid="ignored.files"/>
  </patternset>
  
  <patternset id="excluded.from.compilation.nesbot-commons">
    <patternset refid="excluded.from.module.nesbot-commons"/>
  </patternset>
  
  <path id="nesbot-commons.module.sourcepath">
    <dirset dir="${module.nesbot-commons.basedir}">
      <include name="src/main/java"/>
    </dirset>
  </path>
  
  <path id="nesbot-commons.module.test.sourcepath">
    <dirset dir="${module.nesbot-commons.basedir}">
      <include name="src/test/java"/>
    </dirset>
  </path>
  
  
  <target name="compile.module.nesbot-commons" depends="compile.module.nesbot-commons.production,compile.module.nesbot-commons.tests" description="Compile module nesbot-commons"/>
  
  <target name="compile.module.nesbot-commons.production" description="Compile module nesbot-commons; production classes">
    <mkdir dir="${nesbot-commons.output.dir}"/>
    <javac destdir="${nesbot-commons.output.dir}" debug="${compiler.debug}" nowarn="${compiler.generate.no.warnings}" memorymaximumsize="${compiler.max.memory}" fork="true">
      <compilerarg line="${compiler.args.nesbot-commons}"/>
      <bootclasspath refid="nesbot-commons.module.bootclasspath"/>
      <classpath refid="nesbot-commons.module.production.classpath"/>
      <src refid="nesbot-commons.module.sourcepath"/>
      <patternset refid="excluded.from.compilation.nesbot-commons"/>
    </javac>
    
    <copy todir="${nesbot-commons.output.dir}">
      <fileset dir="${module.nesbot-commons.basedir}/src/main/java">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
    </copy>
  </target>
  
  <target name="compile.module.nesbot-commons.tests" depends="compile.module.nesbot-commons.production" description="compile module nesbot-commons; test classes" unless="skip.tests">
    <mkdir dir="${nesbot-commons.testoutput.dir}"/>
    <javac destdir="${nesbot-commons.testoutput.dir}" debug="${compiler.debug}" nowarn="${compiler.generate.no.warnings}" memorymaximumsize="${compiler.max.memory}" fork="true">
      <compilerarg line="${compiler.args.nesbot-commons}"/>
      <bootclasspath refid="nesbot-commons.module.bootclasspath"/>
      <classpath refid="nesbot-commons.module.classpath"/>
      <src refid="nesbot-commons.module.test.sourcepath"/>
      <patternset refid="excluded.from.compilation.nesbot-commons"/>
    </javac>
    
    <copy todir="${nesbot-commons.testoutput.dir}">
      <fileset dir="${module.nesbot-commons.basedir}/src/test/java">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
    </copy>
  </target>
  
  <target name="clean.module.nesbot-commons" description="cleanup module">
    <delete dir="${nesbot-commons.output.dir}"/>
    <delete dir="${nesbot-commons.testoutput.dir}"/>
  </target>
  
  <target name="init" description="Build initialization">
    <!-- Perform any build initialization in this target -->
  </target>
  
  <target name="clean" depends="clean.module.nesbot-commons" description="cleanup all"/>
  
  <target name="build.modules" depends="init, clean, compile.module.nesbot-commons" description="build all modules"/>
  
  <target name="all" depends="build.modules" description="build all"/>
</project>